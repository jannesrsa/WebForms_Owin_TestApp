@model WebForms_Owin_TestApp.Models.ExternalLoginViewModel
@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-4">
        <section id="socialLoginForm">
            @{
                var loginProviders = Model.AuthenticationTypes;
                if (loginProviders.Count() == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. <br />
                            Contact your K2 Administrator for further assistance.
                        </p>
                    </div>
                }
                else
                {
                    using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = Model.ReturnUrl }))
                    {
                        @Html.AntiForgeryToken()
                        <div id="socialLoginList">
                            <p>
                                @foreach (Microsoft.Owin.Security.AuthenticationDescription p in loginProviders)
                                {
                                    <button type="submit" class="btn btn-default" id="@p.AuthenticationType" name="provider" value="@p.Caption" title="Log in using your @p.Caption account">@p.AuthenticationType</button>
                                }
                            </p>
                        </div>
                    }
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
}